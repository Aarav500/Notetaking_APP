# Ideater v1.0 Configuration

# Application settings
APP_NAME=Ideater
APP_ENV=development  # development, testing, production
DEBUG=True
SECRET_KEY=your_secret_key_here
PORT=8000
HOST=127.0.0.1

# Database settings
DATABASE_URL=sqlite:///ideater.db

# LLM API settings
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_ORG_ID=your_openai_org_id_here  # Optional
DEFAULT_MODEL=gpt-4-turbo  # Options: gpt-3.5-turbo, gpt-4-turbo, gpt-4, etc.
TEMPERATURE=0.7
MAX_TOKENS=4000

# GitHub integration
GITHUB_TOKEN=your_github_token_here
GITHUB_USERNAME=your_github_username

# Notion integration
NOTION_API_KEY=your_notion_api_key_here
NOTION_ROOT_PAGE_ID=your_notion_root_page_id_here

# Visualization settings
MERMAID_CLI_PATH=/path/to/mmdc  # Path to mermaid-cli executable
GRAPHVIZ_PATH=/path/to/dot  # Path to Graphviz dot executable

# Logging settings
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FILE=logs/ideater.log

# Security settings
CORS_ORIGINS=http://localhost:3000,http://localhost:8000
JWT_ALGORITHM=HS256
JWT_EXPIRATION_DELTA=86400  # 24 hours in seconds

# Feature flags
ENABLE_MULTI_AGENT=True
ENABLE_GITHUB_INTEGRATION=True
ENABLE_NOTION_INTEGRATION=True
ENABLE_INTERACTIVE_CANVAS=True

# Output settings
DEFAULT_OUTPUT_FORMAT=markdown  # markdown, pdf, github, notion